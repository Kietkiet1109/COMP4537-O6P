<%- include("template/header") %>
    <div class="container d-flex flex-column justify-content-center align-items-center vh-100">
        <h1 class="text-center mb-4">Reset Password</h1>
        <form id="resetPasswordForm" action="/reset/<%= token %>" method="post" class="w-100" style="max-width: 400px;">
            <div class="mb-3">
                <label for="password" class="form-label">New Password:</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm New Password:</label>
                <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" required>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-dark">Reset Password</button>
            </div>
        </form>
    </div>

    <!-- Successfully Password Reset Pop-Up Modal (Bootstrap template) -->
    <div class="modal modal-sheet position-fixed top-0 start-0 p-4 py-md-5" tabindex="-1" role="dialog" id="modalTour">
        <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-content rounded-4 shadow-lg">
                <div class="modal-body p-5 text-center">
                    <img src="/img/reset.png" alt="Success Icon" class="mb-4 img-fluid">
                    <h2 class="fw-bold mb-4">Password Reset!</h2>
                    <p class="mb-4 fs-5">Your password has been reset successfully.</p>
                    <button id="modalButton" type="button" class="btn btn-lg btn-primary"
                        onclick="window.location.href='/'">Continue</button>
                </div>
            </div>
        </div>
    </div>
<%- include("template/footer") %>