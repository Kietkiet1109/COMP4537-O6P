<%- include("template/header-logged-in", { isAdmin }) %>
    <!-- 404 Page. Used copilot for template -->
    <div class="container mt-5">
        <!-- Search Section -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form id="searchForm" action="/admin/search" method="GET" class="d-flex justify-content-center">
                    <input type="text" name="username" class="form-control w-50" placeholder="Search for a username..." required>
                    <button type="submit" class="btn btn-primary ms-2">Search</button>
                </form>
            </div>
        </div>
    
        <!-- Results Section -->
        <% if (searchAttempted) { %>
            <div class="row justify-content-center mt-4">
                <div class="col-md-8">
                    <% if (searchResult) { %>
                        <div class="card bg-dark text-white">
                            <div class="card-body">
                                <h3 class="card-title text-center">Search Result</h3>
                                <p class="card-text">Username: <%= searchResult.username %></p>
                                <p class="card-text">Email: <%= searchResult.email %></p>
                                <p class="card-text">Admin Status: <%= searchResult.isAdmin ? "Yes" : "No" %></p>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="alert alert-danger text-center" role="alert">
                            No user found with the entered username.
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>
    <%- include("template/footer") %>